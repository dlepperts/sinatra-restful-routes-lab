<form action='/recipes/<%=@recipe.id %>' method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Name: <input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>" /></p>
        
    <p>Ingredients: <textarea id="ingredients" type="text" name="recipe[ingredients]"  value="<%= @recipe.ingredients %>"></textarea></p>
    <p>Cook Time: <textarea id="cook_time" type="text" name="recipe[cook_time]"  value="<%= @recipe.cook_time %>"></textarea></p>
    <input type="submit" id="Submit"/>
</form>

